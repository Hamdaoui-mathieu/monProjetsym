{% extends 'base.html.twig' %}

{% block body %}

	<div class='text-center bg-light p-3'>
		<H1>
			Votre panier
		</H1>
	</div>

	{% if items | length > 0 %}
		<table class="table">
			<thead>
				<tr>
					<th>Produit</th>
					<th>Prix</th>
					<th>Quantit√©</th>
					<th>Total</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for item in items %}
					<tr>
						<td>{{ item.plat.libelle}}</td>
						<td>{{ item.plat.prix}}</td>
						<td>{{item.quantite}}</td>
						<td>{{ item.plat.prix * item.quantite}}</td>
						<td>
							<a href="#" class="btn btn-danger btn-sm"> 
								<i class="fas fa-trash"></i>
                                </a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
			<tfoot>
				<tr>
					<td colspan="3">Total :</td>
					<td>{{ total }}</td>
					<td></td>
				</tr>
			</tfoot>
		</table>
		{% else %}
<p class="text-center">
		Surprise, c'est vide!</p>
	{% endif %}

	


{% endblock %}
